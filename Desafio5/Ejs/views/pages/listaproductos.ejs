<head>
	<%- include('../partials/head'); %>
</head>

<body>
	<%- include('../partials/navbar'); %>
	<%=title %>

	<% if (productsExist)  { %>
	<% products.forEach((item)=>{ %>
	<div>
		id: <%=item.id%><br />
